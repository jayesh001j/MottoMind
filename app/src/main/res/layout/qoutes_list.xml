<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="100sp"
                android:background="@color/black"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10sp">

                <ImageView
                    android:id="@+id/imagepasing"
                    android:layout_width="match_parent"
                    android:layout_height="275sp"
                    android:src="#009688" />

                <TextView
                    android:id="@+id/Quotestext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="50sp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Quotes text"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/authirname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="82sp"
                    android:layout_marginTop="90sp"
                    android:fontFamily="@font/inter_extra_light"
                    android:text="Quotes Author"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorOnPrimary"
                android:gravity="center"
                android:padding="15sp">

                <ImageView
                    android:id="@+id/Add_favorite"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_marginRight="100sp"
                    android:clickable="true"
                    android:onClick="onCopyClick"
                    android:padding="2sp"
                    android:src="@drawable/add_icon" />

                <ImageView
                    android:id="@+id/quotes_share"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:clickable="true"
                    android:onClick="onShareClick"
                    android:padding="2sp"
                    android:src="@drawable/share" />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>




